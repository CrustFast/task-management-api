generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enum untuk mengontrol nilai priority
enum Priority {
  Low
  Medium
  High
}

// Model untuk tabel Task
model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String? // Tanda '?' berarti opsional
  category    String
  priority    Priority @default(Medium) // Menggunakan Enum Priority
  deadline    DateTime

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}