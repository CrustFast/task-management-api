// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Defines the allowed values for a task's priority level.
enum Priority {
  Low
  Medium
  High
}

// Defines the schema for the "Task" table in the database.
model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?  // The '?' makes this field optional (nullable).
  category    String
  priority    Priority @default(Medium) // Uses the Priority enum.
  deadline    DateTime

  // These fields are managed automatically by Prisma.
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
